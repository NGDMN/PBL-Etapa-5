{
  "version": 2,
  "builds": [
    {
      "src": "backend/portal_api/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "buildCommand": "chmod +x build.sh && ./build.sh"
      }
    },
    {
      "src": "portal-apoio-vite/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/portal_api/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "portal-apoio-vite/dist/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11",
    "DJANGO_SETTINGS_MODULE": "portal_api.settings"
  }
} 