{
  "version": 2,
  "builds": [
    {
      "src": "backend/portal_api/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "portal-apoio-vite/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "buildCommand": "cd portal-apoio-vite && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/portal_api/wsgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/portal-apoio-vite/public/static/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/portal-apoio-vite/public/images/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/portal-apoio-vite/dist/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/portal-apoio-vite/dist/index.html"
    }
  ]
} 