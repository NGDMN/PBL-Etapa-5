{
  "version": 2,
  "builds": [
    {
      "src": "backend/portal_api/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11",
        "buildCommand": "cd backend && ./vercel-build.sh"
      }
    },
    {
      "src": "portal-apoio-vite/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd portal-apoio-vite && npm install && npm run build"
      }
    }
  ],
  "rewrites": [
    { "source": "/static/(.*)", "destination": "/portal-apoio-vite/dist/static/$1" },
    { "source": "/api/(.*)", "destination": "/backend/portal_api/wsgi.py" },
    { "source": "/(.*\\.[^/]*)", "destination": "/portal-apoio-vite/dist/$1" },
    { "source": "/(.*)", "destination": "/portal-apoio-vite/dist/index.html" }
  ],
  "env": {
    "PYTHON_VERSION": "3.11",
    "DJANGO_SETTINGS_MODULE": "portal_api.settings",
    "NODE_ENV": "production"
  }
} 